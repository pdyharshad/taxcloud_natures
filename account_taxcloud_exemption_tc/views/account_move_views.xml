<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div
                    class="alert alert-info mb-0"
                    role="alert"
                    invisible="not taxcloud_exemption_id or is_dont_apply_exemption or state == 'draft' or is_exemption_not_applied"
                >
                    Exemption is applied
                </div>
                <div
                    class="alert alert-info mb-0"
                    role="alert"
                    invisible="not is_exemption_not_applied"
                >
                    Exemption is not Applied
                </div>
            </xpath>
            <xpath
                expr="//page[@name='other_info']/group[1]/group[@name='accounting_info_group']/field[@name='fiscal_position_id']"
                position="after"
            >
                <field name="is_taxcloud" invisible="1" />
                <field
                    name="taxcloud_exemption_id"
                    readonly="1"
                    invisible="(not is_taxcloud) or (move_type not in ('out_invoice', 'out_refund'))"
                />
                <field
                    name="is_dont_apply_exemption"
                    invisible="move_type not in ('out_invoice', 'out_refund') or (not is_taxcloud)"
                />
                <field name="is_exemption_not_applied" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
