<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.account.taxcloud</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting id="rounding_method" position="after">
                <setting
                    id="taxcloud_tc_settings"
                    string="TaxCloud TC"
                    help="Compute tax rates based on U.S. ZIP codes"
                >
                    <field name="module_account_taxcloud_tc" />
                    <div
                        class="content-group"
                        invisible="not module_account_taxcloud_tc"
                    >
                        <div class="row mt16">
                            <label
                                string="API ID"
                                for="taxcloud_api_id"
                                class="col-lg-3 o_light_label"
                            />
                            <field name="taxcloud_api_id" class="oe_inline" />
                        </div>
                        <div class="row">
                            <label
                                string="API KEY"
                                for="taxcloud_api_key"
                                class="col-lg-3 o_light_label"
                            />
                            <field name="taxcloud_api_key" class="oe_inline" />
                        </div>
                        <div class="mt8 row">
                            <label
                                string="Default Category"
                                for="tic_category_id"
                                class="col-lg-3 o_light_label"
                            />
                            <field name="tic_category_id" class="oe_inline" />
                            <button
                                name="sync_taxcloud_category"
                                type="object"
                                class="col-lg-auto btn-link"
                            >
                                <i
                                    title="Import/update TICs from TaxCloud"
                                    role="img"
                                    aria-label="Import/update TICs from TaxCloud"
                                    class="fa fa-refresh fa-fw"
                                />
                            </button>
                        </div>
                        <div >
                            <button name="action_send_notify" class="btn btn-primary" id="send_notify" string="Get Notified about Updates" type="object" help="Notify me about updates" invisible="taxcloud_api_id == '' or taxcloud_api_key == '' or notify_email_sent"/>
                            <field name="notify_email_sent" class="oe_inline" invisible="1"/>
                        </div>
                        <div class="row mt-2">
                            <field name="is_default_tax_template" class="col flex-grow-0 mr0 pe-2"/>
                            <div class="col ps-0">
                                <label for="is_default_tax_template"/>
                                <div class="text-muted">Set custom tax configuration for new taxes.</div>
                            </div>
                        </div>
                        <div class="ps-5 mt-2" invisible="not is_default_tax_template">
                                <label
                                    string="Tax Template"
                                    for="tax_template_id"
                                    class="col-lg-3 o_light_label"
                                />
                                <field name="tax_template_id" required="is_default_tax_template"/>
                            </div>
                        <div
                            class="mt16"
                            invisible="taxcloud_api_id != '' and taxcloud_api_key != ''"
                        >
                            <a
                                href="https://www.odoo.com/documentation/17.0/applications/finance/accounting/taxation/taxes/taxcloud.html"
                                target="_new"
                            >
                                <i
                                    class="oi oi-fw oi-arrow-right"
                                />How to Get Credentials</a>
                        </div>
                        <div class="row mt-2">
                            <field name="is_skip_zero_invoice" class="col flex-grow-0 mr0 pe-2"/>
                            <div class="col ps-0">
                                <label for="is_skip_zero_invoice"/>
                            </div>
                        </div>
                    </div>
                </setting>
            </setting>
        </field>
    </record>

</odoo>
